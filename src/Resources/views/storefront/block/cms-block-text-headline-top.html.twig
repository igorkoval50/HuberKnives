        <div class="col-12" data-cms-element-id="{{ id }}">
            {% block block_text_headline_center_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
