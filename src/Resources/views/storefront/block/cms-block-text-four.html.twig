{% block block_text_two_column %}
    {% set columns = 4 %}
    {% set id = element.id %}
    {% block block_text_four_top_left %}
        {% set element = block.slots.getSlot('topLeft') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_column_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_text_four_top_right %}
        {% set element = block.slots.getSlot('topRight') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_column_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_text_four_bottom_left %}
        {% set element = block.slots.getSlot('bottomLeft') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_column_bottom_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_text_four_bottom_right %}
        {% set element = block.slots.getSlot('bottomRight') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_column_bottom_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
