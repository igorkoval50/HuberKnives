{% block block_text_two_button %}
    {% set columns = 2 %}
    {% set id = element.id %}
    {% block block_text_two_button_left %}
        {% set element = block.slots.getSlot('left') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_button_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_text_two_button_right %}
        {% set element = block.slots.getSlot('right') %}

        <div class="col-md-6" data-cms-element-id="{{ id }}">
            {% block block_text_two_button_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_text_two_button_bottom %}
        {% set element = block.slots.getSlot('bottom') %}

        <div class="col-md-12 d-flex justify-content-center button-down" data-cms-element-id="{{ id }}">
            {% block block_text_two_button_bottom_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
